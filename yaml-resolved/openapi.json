{
  "openapi" : "3.0.0",
  "info" : {
    "title" : "Дополучкино - отдел взыскания",
    "description" : "Debt collection",
    "version" : "1.0.0"
  },
  "servers" : [ {
    "url" : "/"
  } ],
  "paths" : {
    "/api/v1/admin/debt/loans" : {
      "get" : {
        "description" : "Возвращает список займов для отдела взыскания",
        "parameters" : [ {
          "name" : "filter",
          "in" : "query",
          "description" : "Набор фильтров",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "array",
            "items" : {
              "type" : "object"
            }
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Список займов",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/LoanList"
                }
              }
            }
          },
          "400" : {
            "description" : "Некорректный запрос, ошибка в параметрах запроса",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/inline_response_400"
                }
              }
            }
          },
          "403" : {
            "description" : "Недостаточно прав доступа"
          }
        }
      }
    },
    "/api/v1/admin/debt/loans/assign" : {
      "post" : {
        "description" : "Назначить займы на сотрудника",
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/body"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "200" : {
            "description" : "Запрос завершился удачно"
          },
          "400" : {
            "description" : "Некорректный запрос, ошибка в параметрах запроса",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/inline_response_400"
                }
              }
            }
          },
          "403" : {
            "description" : "Недостаточно прав доступа"
          }
        }
      }
    },
    "/api/v1/admin/debt/loans/{id}/add_event" : {
      "post" : {
        "description" : "Добавить запланированное событие",
        "parameters" : [ {
          "name" : "id",
          "in" : "path",
          "description" : "ID займа",
          "required" : true,
          "style" : "simple",
          "explode" : false,
          "schema" : {
            "type" : "integer"
          }
        } ],
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/body_1"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "200" : {
            "description" : "Запрос завершился удачно"
          },
          "400" : {
            "description" : "Некорректный запрос, ошибка в параметрах запроса",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/inline_response_400"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/admin/debt/loans/{id}/send_mail" : {
      "post" : {
        "description" : "Отправить клиенту с этим займом письмо по заданному шаблону",
        "parameters" : [ {
          "name" : "id",
          "in" : "path",
          "description" : "ID займа",
          "required" : true,
          "style" : "simple",
          "explode" : false,
          "schema" : {
            "type" : "integer"
          }
        } ],
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/body_2"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "200" : {
            "description" : "Запрос завершился удачно"
          }
        }
      }
    },
    "/api/v1/admin/mail/templates/{type}" : {
      "get" : {
        "description" : "Получить список шаблонов для отправки писем",
        "parameters" : [ {
          "name" : "type",
          "in" : "path",
          "description" : "Тип шаблонов (для взыскания, для продажников)",
          "required" : true,
          "style" : "simple",
          "explode" : false,
          "schema" : {
            "type" : "string",
            "enum" : [ "debt", "sales" ]
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Список шаблонов для писем",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/MailTemplateList"
                }
              }
            }
          },
          "404" : {
            "description" : "Данный тип шаблонов не найден"
          }
        }
      }
    },
    "/api/v1/admin/mail/send" : {
      "post" : {
        "description" : "Отправить письмо по шаблону",
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/body_3"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "200" : {
            "description" : "Письмо отправлено"
          },
          "404" : {
            "description" : "Шаблон или займ не найден"
          },
          "422" : {
            "description" : "Не удалось отправить письмо"
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "LoanList" : {
        "type" : "object",
        "properties" : {
          "total" : {
            "type" : "integer",
            "description" : "Кол-во займов в ответе"
          },
          "loans" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/LoanList_loans"
            }
          }
        },
        "description" : "Список займов"
      },
      "MailTemplateList" : {
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "integer",
            "description" : "ID шаблона"
          },
          "name" : {
            "type" : "string",
            "description" : "Имя шаблона",
            "example" : "template.mail.debt_1_day_overdue"
          },
          "subject" : {
            "type" : "string",
            "description" : "Тема письма (для предпросмотра)"
          },
          "body" : {
            "type" : "string",
            "description" : "Текст письма (для предпросмотра)"
          }
        },
        "description" : "Шаблон для отправки письма"
      },
      "inline_response_400" : {
        "type" : "object",
        "properties" : {
          "message" : {
            "type" : "string",
            "description" : "Error message"
          },
          "param" : {
            "type" : "string",
            "description" : "Incorrect param name"
          }
        }
      },
      "body" : {
        "type" : "object",
        "properties" : {
          "employee_id" : {
            "type" : "integer",
            "description" : "ID сотрудника взыскания"
          },
          "loans" : {
            "type" : "array",
            "description" : "Массив id займов",
            "items" : {
              "type" : "integer"
            }
          }
        }
      },
      "body_1" : {
        "type" : "object",
        "properties" : {
          "type" : {
            "type" : "string",
            "description" : "Тип события",
            "enum" : [ "incoming_call", "homephone_call", "cellphone_call", "email" ]
          },
          "date" : {
            "type" : "string",
            "description" : "Дата события",
            "format" : "date"
          },
          "comment" : {
            "type" : "string",
            "description" : "Комментарий к событию"
          }
        }
      },
      "body_2" : {
        "type" : "object",
        "properties" : {
          "template" : {
            "type" : "integer",
            "description" : "ID шаблона письма"
          }
        }
      },
      "body_3" : {
        "type" : "object",
        "properties" : {
          "template" : {
            "type" : "integer",
            "description" : "ID шаблона письма"
          },
          "loan" : {
            "type" : "integer",
            "description" : "ID займа, по которому отправляется письмо"
          }
        }
      },
      "LoanList_responsible_manager" : {
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "integer"
          },
          "full_name" : {
            "type" : "string"
          }
        }
      },
      "LoanList_loans" : {
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "integer"
          },
          "fio" : {
            "type" : "string",
            "description" : "ФИО клиента"
          },
          "created_at" : {
            "type" : "string",
            "description" : "Дата взятия займа (DD.MM.YYYY HH:MM:SS)"
          },
          "period" : {
            "type" : "integer",
            "description" : "Срок кредита в днях"
          },
          "pay_type" : {
            "type" : "string",
            "description" : "Способ выдачи займа",
            "enum" : [ "bank_card" ]
          },
          "amount" : {
            "type" : "integer",
            "description" : "Сумма займа в копейках"
          },
          "closed_expected" : {
            "type" : "string",
            "description" : "Дата возврата по договору (DD.MM.YYYY HH:MM:SS)"
          },
          "overdue_period" : {
            "type" : "integer",
            "description" : "Срок просрочки в днях"
          },
          "last_execution_date" : {
            "type" : "string",
            "description" : "Дата последнего мероприятия (DD.MM.YYYY HH:MM:SS)"
          },
          "next_execution_date" : {
            "type" : "string",
            "description" : "Запланированно на (DD.MM.YYYY HH:MM:SS)"
          },
          "responsible_manager" : {
            "$ref" : "#/components/schemas/LoanList_responsible_manager"
          },
          "actual_address_region" : {
            "type" : "string",
            "description" : "Область проживания клиента"
          },
          "current_time" : {
            "type" : "string",
            "description" : "Текущее время клиента (HH:MM:SS)"
          }
        }
      }
    },
    "responses" : {
      "Success" : {
        "description" : "Запрос завершился удачно"
      },
      "Forbidden" : {
        "description" : "Недостаточно прав доступа"
      },
      "BadRequest" : {
        "description" : "Некорректный запрос, ошибка в параметрах запроса",
        "content" : {
          "application/json" : {
            "schema" : {
              "type" : "object",
              "properties" : {
                "message" : {
                  "type" : "string",
                  "description" : "Error message"
                },
                "param" : {
                  "type" : "string",
                  "description" : "Incorrect param name"
                }
              }
            }
          }
        }
      }
    }
  }
}